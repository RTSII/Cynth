      "label": "Home screen with daily exercises"
    },
    {
      "src": "/assets/screenshots/exercise.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Exercise guidance with video instructions"
    }
  ],
  "shortcuts": [
    {
      "name": "Today's Practice",
      "url": "/today",
      "icons": [
        {
          "src": "/assets/icons/today-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Quick Exercise",
      "url": "/programs",
      "icons": [
        {
          "src": "/assets/icons/exercise-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "handle_links": {
    "enabled": true,
    "url_handlers": [
      {
        "origin": "https://cynthai.app"
      }
    ]
  },
  "launch_handler": {
    "client_mode": [
      "focus-existing",
      "auto"
    ]
  },
  "edge_side_panel": {
    "preferred_width": 480
  },
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "browser"
  ],
  "protocol_handlers": [
    {
      "protocol": "web+cynthai",
      "url": "/?exerciseId=%s"
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  }
}